class Line {
  var cx = 200.0;
  var cy = 200.0;
  var angle = 0.0;
  var offset = 0.0;
  var len = 50.0;
  var x1 = 0; var y1 = 0; var x2 = 0; var y2 = 0;
  var xxc = 0; var yyc = 0;
  
  method init(xc,yc) {
    xxc = xc; yyc = yc;
  }

  method start() {
    call sdl_init(640,480);
    call sdl_clear();
  }

  method rotate() {
    angle = angle + 5.0;
    var rad = (angle + offset) * 3.14159 / 180.0;
    var dx = len * cos(rad);
    var dy = len * sin(rad);
    x1 = cx - dx+xxc; y1 = cy - dy+yyc; x2 = cx + dx+xxc; y2 = cy + dy+yyc;
    call sdl_clear();
    call sdl_line(x1, y1, x2, y2);    
    call sdl_present();
    call wait(32);
    send self.rotate();
  }
}
var li1 = new Line(0,0);
var li2 = new Line(0,200);
var li3 = new Line(200,0);
send li1.start();
send li1.rotate();
send li2.rotate();
send li3.rotate();
