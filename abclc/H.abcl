class Hello {
  var count = 0.;

  method init(n) {
    count = n;
    call print("Hello object initialized with " + n);
  }

  method greet() {
    call print("Hello! count = " + count);
  }

  method inc() {
    count = count + 1.;
    call print("count incremented to " + count);
  }
}

var h = new Hello(5.);
send h.greet();
