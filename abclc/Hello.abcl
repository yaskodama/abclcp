class Hello {
  float count = 0.;

  method init(n) {
    count = n;
    call print("Hello object initialized with " + n);
  }

  method greet() {
    call print("Hello! count = " + count);
  }

  method inc() {
    count = count + 1.;
    call print("count incremented to " + count);
  }
}

var h = new Hello(5);      // ← 生成時に init(5) が自動呼び出しされる
send h.greet();            // Hello! count = 5
send h.inc();              // count incremented to 6
send h.greet();            // Hello! count = 6
