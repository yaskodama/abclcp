class Pinger {
  method init() {
    var x = 1.;
    call print("Pinger starting");
    send ponger.ping(x);
  }
  method pong() {
    var x = 2.;
    call print("Pinger got pong");
    send sender.ping(x);
  }
}

class Ponger {
  method ping(x) {
    call print(x);
    call print("Ponger got ping");
    send sender.pong();
  }
}

var pinger = new Pinger();
var ponger = new Ponger();
